{
  "name": "flux-boilerplate",
  "version": "0.0.1",
  "description": "Flux Boilerplate.",
  "main": "flux-application/app.js",
  "dependencies": {
    "es6-promise": "~0.1.1",
    "react": "~0.9"
  },
  "devDependencies": {
    "browserify": "~2.36.0",
    "envify": "~1.2.0",
    "reactify": "~0.4.0",
    "statics": "~0.1.0",
    "uglify-js": "~2.4.13",
    "watchify": "~0.4.1"
  },
  "scripts": {
    "start": "STATIC_ROOT=./static watchify -o flux-application/bundle.js -v -d .",
    "build": "STATIC_ROOT=./static NODE_ENV=production browserify . | uglifyjs -cm > flux-application/bundle.min.js",
    "collect-static": "collect-static . ./static",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "J.P. Given <jgiven@gmail.com> - Based off of todomvc-flux by Bill Fisher",
  "license": "Apache 2",
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  }
}
